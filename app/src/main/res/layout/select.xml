<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:id="@+id/sel_title"
        android:background="#0d44ea"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sel_title_text"
            android:gravity="center"
            android:text="学生选宿舍系统"
            android:textColor="#faf9f9"
            android:textSize="22.0dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sel_back"
            android:text="退出登陆"
            android:textColor="#000000"
            android:textSize="18.0dip"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sel_title"
        android:id="@+id/sel_under">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="亲爱的同学你好，你的验证码是："
            android:textSize="22.0dip"
            android:textColor="#000000"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="20.0dip"
            android:id="@+id/sel_text1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdf12"
            android:layout_below="@+id/sel_text1"
            android:layout_marginTop="10.0dip"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:textColor="#000000"
            android:textSize="30.0dip"
            android:id="@+id/sel_yanzheng"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:layout_below="@+id/sel_yanzheng"
            android:layout_marginTop="10dip"
            android:text="点击查看个人信息"
            android:textColor="#000000"
            android:textSize="20.0dip"
            android:layout_centerHorizontal="true"
            android:id="@+id/sel_btn_1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45.0dip"
            android:gravity="center"
            android:layout_below="@+id/sel_btn_1"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true"
            android:text="点击查看宿舍信息"
            android:textSize="20.0dip"
            android:textColor="#000000"
            android:id="@+id/sel_btn_2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45.0dip"
            android:layout_below="@+id/sel_btn_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:text="点击进行选择宿舍"
            android:textColor="#000000"
            android:textSize="20.0dip"
            android:gravity="center"
            android:id="@+id/sel_btn_3"/>

        <ImageView
            android:id="@+id/sel_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sel_btn_3"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true"
            android:src = "@drawable/fengjing"/>
    </RelativeLayout>

</RelativeLayout>
