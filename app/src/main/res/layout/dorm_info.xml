<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:id="@+id/wel_title"
        android:background="#0d44ea"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wel_title_text"
            android:gravity="center"
            android:text="学生选宿舍系统"
            android:textColor="#faf9f9"
            android:textSize="22.0dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wel_under"
        android:background="#f0f0f0"
        android:layout_below="@+id/wel_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100.0dip"
            android:id="@+id/wel_under_text"
            android:text="亲爱的同学你好，恭喜你已经被北京大学软件与微电子学院录取，请填写你的学号和密码："
            android:textSize="20.0dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:textColor="00ff00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25.0dip"
            android:layout_below="@+id/wel_under_text"
            android:text="学号："
            android:textColor="#000000"
            android:textSize="22.0dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="20dip"
            android:id="@+id/wel_under_text_xuehao"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_below="@+id/wel_under_text_xuehao"
            android:background="#ffffff"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:id="@+id/wel_edit_xuehao"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25.0dip"
            android:layout_below="@+id/wel_edit_xuehao"
            android:text="密码："
            android:textColor="#000000"
            android:textSize="22.0dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="25dip"
            android:id="@+id/wel_under_text_mima"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_below="@+id/wel_under_text_mima"
            android:background="#ffffff"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:id="@+id/wel_edit_mima"/>

        <ImageView
            android:layout_width="150dip"
            android:layout_height="45.0dip"
            android:layout_below="@+id/wel_edit_mima"
            android:layout_marginLeft="110dip"
            android:layout_marginTop="40dip"
            android:id="@+id/wel_btn_sign"
            android:src="@drawable/sign"/>

    </RelativeLayout>

</RelativeLayout>